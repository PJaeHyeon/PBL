#include <stdio.h> 
int main(void)
{
	int a = -1;
	int b = -1;
	
	while (a != 0 && b != 0) {

		printf("a를 입력하시오.(0<a<10): \n");
		scanf("%d", &a);//a를 입력

		printf("b를 입력하시오.(0<b<10): \n");
		scanf("%d", &b);//b를 입력
		if (a == 0 && b == 0) {
			break;
		}// a=0 b=0일때 종료
		else {
			int c = a + b;
			printf("c= %d\n", c);
		}// a,b의 합을 출력
	}
}
