#include <stdio.h>
int main(void)
{
	int a; printf("연도를 입력하시오(1~4000).");
	scanf("%d", &a);
	if (a % 4 == 0) {
		if (a % 100 == 0) {
			if (a % 400 == 0) {
				printf("1");
			}//연도가 100의 배수이지만, 400의 배수일 때, 윤년이다.
			else {
				printf("0");
			}//연도가 100의 배수일 때, 윤년이 아니다.
		}
		else {
			printf("1");
		}//연도가 4의 배수이지만, 100의 배수가 아닐 때, 윤년이다.
	}// 연도가 4의 배수일 때 윤년이다.
	else {
		printf("0");
	}// 연도가 4의 배수가 아닐 때 윤년이 아니다.
}
