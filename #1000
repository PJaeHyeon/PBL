#include <stdio.h>

int main() //문제번호 1000
{
    int a; //첫번째 숫자 변수 설정
    int b; //두번째 숫자 변수 설정
    int sum; //합계 변수 설정

    printf("첫번째 숫자를 입력하세요.");
    scanf("%d", &a); //입력받는 명령어 생성

    printf("두번째 숫자를 입력하세요.");
    scanf("%d", &b);//입력받는 명령어 생성

    sum = a + b; //합계를 구하는 수식 입력

    printf("%d \n", sum); //계산된 합계값 출력
}
